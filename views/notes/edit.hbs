
<div>
    <form action="/notes/{{notes._id}}" method="POST">
        <div class="form-group">
            <label for="title">Title:</label>
            <input class="form-control" type="test" id="title" name="title"{{#if notes.Title}} value="{{notes.title}}" {{/if}}>
            <small id="titleHelp" class="form-text text-muted">Title is not required.</small>
        </div>
        <div class="form-group">
            <label for="note">Note:</label>
            <input class="form-control" type="test" id="note" name="note" value="{{notes.note}}">
        </div>
        <button type="submit" class="btn btn-dark">Update</button>
        <a href="/notes" class="btn btn-secondary">Cancel</a>
    </form>
</div>